{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2018"],
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "exclude": [
    "node_modules",
    "../**/*.spec.ts",
    "../**/*.spec.tsx",
    "../**/*.stories.ts",
    "../**/*.stories.tsx",
    "../**/*.storyhelper.tsx",
    "../**/*.storyhelper.ts",
    "../**/out"
  ]
}
